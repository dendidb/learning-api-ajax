//-------------------------------------------------------------------------------
  @name: Input Form
  -------------------------------------------------------------------------------//

//- Input Form
.fi-row
  ='\n'
  label(class='fi-label' for=data.id) !{data.label}
  //- fi upload
  //- fi multiline
  if data.class === 'fi-multiline'
    ='\n'
    textarea(class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target)
  //- fi dropdown
  else if data.id === 'dropdown'
    .fi-dropdown
      ='\n'
      input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target)/
      ='\n'
      p.fi-dropdown__text
      ul.fi-dropdown-menu
        each valDrop in data.dropdown
          li.fi-dropdown-item(data-value=valDrop.value) !{valDrop.text}
  //- fi default
  else
    ='\n'
    input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target)/
    ='\n'

  //- error validation
  p.fi-alert(id=data.target data-req=data.required data-invalid=data.invalid data-invalid-phone=data.invalidPhone)
